        android:typeface="sans"
        android:textSize="18px"
        android:textColor="#242424"
        android:background="@drawable/systemsetting_btn_selector" />
    
   	<Button
        android:id="@+id/netbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
  	    android:layout_marginLeft="639px"
        android:layout_marginTop="269px"
        android:gravity="center"
        android:typeface="sans"
        android:textSize="18px"
        android:textColor="#242424"
        android:text="NETWORK"
        android:background="@drawable/systemsetting_btn_selector" />
   	
    <TextView
   	    android:id="@+id/versiontext"
	    android:layout_width="200px"
	    android:layout_height="30px"
	    android:layout_marginLeft="590px"
	    android:layout_marginTop="440px"
	    android:gravity="bottom|right"
        android:typeface="sans"
        android:textSize="18px"
        android:textColor="#04A458" />
    	        
